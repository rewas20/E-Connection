<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorAPP">
   <LinearLayout
       android:id="@+id/pin_pass"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:orientation="vertical"
       android:weightSum="4"
       android:padding="25dp"
       >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="Verification Banking"
           android:gravity="center_horizontal"
           android:textColor="@color/text_black"
           android:textSize="20dp"
           android:textStyle="bold"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="Check if you're already available in area"
           android:gravity="center_horizontal"
           android:layout_marginTop="40dp"
           android:textColor="@color/colorNumber"
           android:textSize="25dp"
           android:textStyle="bold"/>
       <TextView
           android:id="@+id/error"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="Enter zip code"
           android:layout_marginTop="10dp"
           android:gravity="center_horizontal"
           android:textColor="@color/colorNumber"
           android:textSize="14dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:weightSum="4"
           android:orientation="horizontal"
           android:layout_gravity="center_horizontal"
           android:gravity="center_horizontal"
            android:layout_margin="30dp"
           >
          <ImageView
              android:id="@+id/circle_empty1"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
             android:src="@drawable/circle_check"
              />
           <ImageView
               android:id="@+id/circle_empty2"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_gravity="center_horizontal"
               android:gravity="center_horizontal"
               android:src="@drawable/circle_check"
               />
           <ImageView
               android:id="@+id/circle_empty3"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_gravity="center_horizontal"
               android:gravity="center_horizontal"
               android:src="@drawable/circle_check"
               />
           <ImageView
               android:id="@+id/circle_empty4"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_gravity="center_horizontal"
               android:gravity="center_horizontal"
               android:src="@drawable/circle_check"
              />
       </LinearLayout>
       <com.airbnb.lottie.LottieAnimationView
           android:id="@+id/unlock"
           android:layout_weight="1"
           android:layout_width="80dp"
           android:layout_height="60dp"
           android:layout_gravity="center_horizontal"
           app:lottie_autoPlay="false"
           app:lottie_loop="false"
           app:lottie_rawRes="@raw/unlock"/>



   </LinearLayout>
    <LinearLayout
        android:id="@+id/numbers_pin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pin_pass"
        android:background="@drawable/pass_code_numbers"
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/btn_number1"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:shadowColor="@android:color/transparent"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold"
               />
            <Button
                android:id="@+id/btn_number2"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="2"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btn_number3"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="3"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/btn_number4"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="4"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_number5"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="5"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_number6"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="6"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"

            android:weightSum="3"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/btn_number7"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="7"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_number8"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="8"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_number9"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="9"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold"
               />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1"
            >

           <ImageButton
               android:id="@+id/check_code"
               style="@style/Widget.AppCompat.Button.Borderless.Colored"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:shadowColor="@android:color/transparent"
               android:text="0"
               android:textAllCaps="false"
               android:textColor="@color/text_black"
               android:textSize="25dp"
               android:textStyle="bold"
               android:src="@drawable/check" />

            <Button
                android:id="@+id/btn_number0"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="0"
                android:textAllCaps="false"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold"
               />
            <ImageButton
                android:id="@+id/back_space"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:text="0"
                android:textAllCaps="false"
                android:textColor="@color/text_black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:src="@drawable/backspace" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>